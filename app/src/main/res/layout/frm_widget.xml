<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <!--<data>-->

    <!--&lt;!&ndash;<variable&ndash;&gt;-->
    <!--&lt;!&ndash;name="loginActivityCallback"&ndash;&gt;-->
    <!--&lt;!&ndash;type="com.ryadav3.mvvmsample.view.callback.LoginActivityCallback" />&ndash;&gt;-->
    <!--</data>-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp20"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp20"
                            android:orientation="vertical">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp50"
                                android:layout_marginTop="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp30"
                                android:background="@color/app_color"
                                android:orientation="horizontal">

                            <TextView
                                    style="@style/txt_white_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/app_name" />

                            <ImageView
                                    android:id="@+id/img_option_menu"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_option" />
                        </RelativeLayout>

                        <TextView
                                style="@style/txt_black_normal"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="Rating Bar Style"
                                android:textSize="@dimen/sp19" />
                        <!--                        the filled stars color (progressTint)-->
                        <!--                        the unfilled stars color (progressBackgroundTint)-->
                        <!--                        and the border color (secondaryProgressTint) of the stars-->
                        <RatingBar
                                android:id="@+id/rb_style"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:numStars="5"
                                android:progressBackgroundTint="@color/gray_CDCDCD"
                                android:progressTint="@color/app_color"
                                android:rating="3"
                                android:secondaryProgressTint="@color/gray_CDCDCD"
                                android:stepSize="0.5" />

                        <TextView
                                style="@style/txt_black_normal"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="Rating Bar Style Indicator"
                                android:textSize="@dimen/sp17" />

                        <RatingBar
                                android:id="@+id/rb_indicator"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="3" />

                        <TextView
                                style="@style/txt_black_normal"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="Rating Bar Style Small"
                                android:textSize="@dimen/sp15" />

                        <RatingBar
                                android:id="@+id/rb_small"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="3" />

                        <TextView
                                style="@style/txt_black_normal"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="One Touch Rating Bar"
                                android:textSize="@dimen/sp12" />

                        <RatingBar
                                android:id="@+id/rb_one_touch"
                                style="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="3"
                                android:scaleX="0.2"
                                android:scaleY="0.2" />

                        <TextView
                                style="@style/txt_black_normal"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="Custom RatingBar with Images"
                                android:textSize="@dimen/sp16" />

                        <RatingBar
                                android:id="@+id/rb_ratingbar"
                                style="@style/CustomStarRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/dp5"
                                android:paddingBottom="@dimen/dp5"
                                android:rating="3" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150"
                        android:layout_gravity="center_horizontal"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/sleepy_loading" />

                <TextView
                        android:id="@+id/txt_spannable"
                        style="@style/TextView_Regular"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_marginBottom="@dimen/dp50"
                        android:gravity="center" />

                <TextView
                        android:id="@+id/txt_marquee"
                        style="@style/txt_black_normal"
                        android:layout_marginTop="@dimen/dp15"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/dummyText"
                        android:textColor="@color/black" />


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp20"
                        app:cardCornerRadius="@dimen/dp4">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp20"
                            android:orientation="vertical">

                        <!--<pl.droidsonroids.gif.GifImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@raw/loader" />-->

                        <AutoCompleteTextView
                                android:id="@+id/autoCompleteTextVie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:drawablePadding="@dimen/dp4"
                                android:ems="10"
                                android:hint="Select country"
                                android:textAppearance="@style/TextAppearance_open_sans_semibold">

                        </AutoCompleteTextView>


                        <MultiAutoCompleteTextView
                                android:id="@+id/multiAutoCompleteTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:ems="10"
                                android:hint="Select multiple country"
                                android:textAppearance="@style/TextAppearance_open_sans_semibold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:id="@+id/wave_form"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp180" />

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp20"
                        app:cardCornerRadius="4dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:orientation="vertical">

                        <RadioGroup
                                android:id="@+id/rg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal">

                            <RadioButton
                                    android:id="@+id/cb_selected"
                                    style="@style/checkBox"
                                    android:text="@string/selected" />

                            <RadioButton
                                    android:id="@+id/cb_unselected"
                                    style="@style/checkBox"
                                    android:text="@string/unselected" />

                            <RadioButton
                                    android:id="@+id/cb_none"
                                    style="@style/checkBox"
                                    android:text="@string/none" />
                        </RadioGroup>

                        <Switch
                                android:id="@+id/switch_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp18"
                                android:layout_marginBottom="@dimen/dp5"
                                android:switchTextAppearance="@style/switch_text_appearance"
                                android:textOff="OFF"
                                android:textOn="ON" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/txt_date_value"
                                    style="@style/TextView_Regular" />

                            <Button
                                    android:id="@+id/btn_data_picker"
                                    style="@style/Button"
                                    android:text="@string/select_date" />

                            <TextView
                                    android:id="@+id/txt_time_value"
                                    style="@style/TextView_Regular"
                                    android:layout_marginTop="@dimen/dp5" />

                            <Button
                                    android:id="@+id/btn_time_picker"
                                    style="@style/Button"
                                    android:text="@string/select_time" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/txt_progress"
                                style="@style/TextView_Regular"
                                android:text="" />


                        <TextView
                                android:id="@+id/txt_seekbar"
                                style="@style/TextView_Regular" />

                        <SeekBar
                                android:id="@+id/seekBar"
                                style="@style/SeekBar"
                                android:layout_margin="@dimen/dp15"
                                android:progressDrawable="@drawable/seekbar_custom"
                                android:thumb="@drawable/seekbar_thumb" />

                        <Button
                                android:id="@+id/btn_start_progress"
                                style="@style/Button"
                                android:text="@string/start_progress" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:id="@+id/bottom_space"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>