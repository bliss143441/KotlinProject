<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dist="http://schemas.android.com/apk/distribution"
        package="com.example.kotlinproject">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
            android:name=".global.common.AppApplication"
            android:allowBackup="true"
            android:hardwareAccelerated="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@drawable/logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="@string/google_key" />
        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        <service
                android:name=".global.services.GeofenceTransitionsIntentService"
                android:exported="true" />
        <activity android:name=".view.splash.SplashActivity"
                android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.onBoarding.OnBoardActivity"
                android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".view.language.LanguageActivity"
                android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".view.widget.WidgetActivity"
                android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
                android:name=".view.login.LoginActivity"
                android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
                android:name=".view.home.HomeActivity"
                android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".view.map.MapActivity"
                android:windowSoftInputMode="stateAlwaysHidden">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

</manifest>